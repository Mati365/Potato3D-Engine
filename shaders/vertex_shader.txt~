#version 330
layout(location = 0) in  vec4 in_Position;
layout(location = 1) in  vec3 in_Normal;
layout(location = 2) in  vec2 in_UV;

out vec4 ex_Color;
out vec2 uv;
out vec3 normal;

uniform mat4x4 mvp;
uniform vec4 cam;
uniform vec4 col;

void main(void) {
	uv = in_UV;
	gl_Position = in_Position * mvp;

	float dist = max(0, 1 - distance(gl_Position, vec4(0,0,0,1)) / 12);
	ex_Color = col * dist;
}
